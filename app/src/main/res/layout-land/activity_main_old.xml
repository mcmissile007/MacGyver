<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.falkenapps.macgyver.main.MainActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main.message.welcome"
        android:id="@+id/txtWelcomeMessage"
        app:layout_constraintLeft_toRightOf="@+id/imageViewUser"
        android:layout_marginLeft="64dp"
        app:layout_constraintTop_toTopOf="@+id/imageViewUser"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/btnSignOff"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main.button.signOff"
        android:visibility="invisible"
        app:layout_constraintLeft_toRightOf="@+id/imageViewUser"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/txtEmailMain" />

    <ImageView
        android:id="@+id/imageViewUser"
        android:layout_width="127dp"
        android:layout_height="158dp"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_portrait"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="80dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintVertical_bias="0.502" />

    <TextView
        android:id="@+id/txtEmailMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@+id/imageViewUser"
        android:layout_marginLeft="64dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/txtWelcomeMessage" />


</android.support.constraint.ConstraintLayout>
